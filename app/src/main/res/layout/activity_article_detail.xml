<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ArticleDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Article Title -->
        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Article Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primary_color"
            android:layout_marginBottom="24dp" />

        <!-- Article Content -->
        <TextView
            android:id="@+id/article_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Article content will appear here..."
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="32dp" />

        <!-- Professional Disclaimer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_color"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Professional Guidance"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This content is for educational purposes. If you're experiencing persistent mental health concerns, please speak with a counselor, trusted adult, or mental health professional."
                android:textSize="14sp"
                android:textColor="@color/secondary_text"
                android:lineSpacingExtra="3dp"
                android:textStyle="italic" />

        </LinearLayout>

        <!-- Emergency Contact Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/stress_color"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ†˜ Need Immediate Help?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crisis Text Line: Text HOME to 741741\nNational Suicide Prevention Lifeline: 988\nOr contact your local emergency services: 911"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:lineSpacingExtra="3dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView> 